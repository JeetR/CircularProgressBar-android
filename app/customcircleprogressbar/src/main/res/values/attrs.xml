<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CircularProgressBar">
        <attr name="progressBarColor" format="color" />
        <attr name="progressTextColor" format="color" />
        <attr name="maxProgressLimit" format="integer" />
        <attr name="minProgressLimit" format="integer" />
        <attr name="progress" format="integer" />
        <attr name="animateProgress" format="boolean" />
        <attr name="showProgressText" format="boolean" />
        <attr name="progressTextSize" format="dimension" />
        <attr name="maxAnimationDuration" format="integer" />
        <attr name="animationInterpolator" format="enum">
            <enum name="LinearInterpolator" value="0"/>
            <enum name="AccelerateDecelerateInterpolator" value="1"/>
            <enum name="BounceInterpolator" value="2"/>
        </attr>


    </declare-styleable>

</resources>